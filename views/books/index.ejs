<h2 class="page-header">Search Books</h2>
<form method="GET" action="/books">
  <div class="form-row">
    <div class="form-item">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" value="<%= searchOptions.title %>">
    </div>
  </div>

  <div class="form-row">
    <div class="form-item">
      <label for="publishedAfter">Published After</label>
      <input type="date" name="publishedAfter" id="publishedAfter" value="<%= searchOptions.publishedAfter %>">
    </div>
    <div class="form-item">
      <label for="publishedBefore">Published Before</label>
      <input type="date" name="publishedBefore" id="publishedBefore" value="<%= searchOptions.publishedBefore %>">
    </div>
  </div>

  <div class="form-row form-row-end btn-row">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<div>
  <% books.forEach(book => { %>
    <a href="/books/<%= book.id %>">
      <img height="150" width='100' src="<%= book.coverImagePath %>">
    </a>
  <% }) %>
</div>